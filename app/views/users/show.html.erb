<div class="user-page">
  <%= render "shared/details", user: @user %>
    <div class="user-bio">
     <strong class="bio">Bio: </strong> <br>
     <p><%= @user.bio %></p>
    </div>
    <div class="user-posts">
    <% @user.most_recent_posts.each do |post| %>
        <%= link_to user_post_path(author_id:@user.id, id: post.id) do%>
      <%= render "shared/posts_details", post: post %>
        <%end%>
    <%end%>
    </div>
    <% if @current_user %>
<a href="/users/<%= @user.id %>/posts/new">
<button class="posts-btn">
        Add new post
</button></a>
<% end %>

<a href="/users/<%= @user.id %>/posts">
<button class="posts-btn">
        See all posts
</button></a>
</div>
